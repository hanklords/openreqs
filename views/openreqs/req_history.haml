%html
  %head
    %title #{@name} - History
  %body
    %h2
      %a#main_link{:href => to("/r/#@name")}= @name
    %ul
      - @dates.each do |date|
        %li
          %a.version{:href => to("/r/#@name/#{date.iso8601}")}= date.strftime("%F %T")
          %a.diff{:href => to("/r/#@name/#{date.iso8601}/diff")} (diff)
