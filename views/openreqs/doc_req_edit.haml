%html
  %body
    %form(method="post")
      %h2 Attributes
      %ul
        - @req.attributes.each do |k,v| 
          %li #{k}: #{v}
        %li
          %input(name="key")
          \:
          %input(name="value")
      %h2 Text
      %textarea(name="content" cols=80 rows=40)= @req.content
      %p
      %input(type="submit" value="Sauver")

