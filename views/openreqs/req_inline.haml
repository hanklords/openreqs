.req
  %strong
    - if @date
      = @reqp.name
      - if @req
        (on #{@date.strftime('%F %T')})
    - else
      %a{:href => to("/r/#{@reqp.name}/edit")}= @reqp.name
  = @reqp.content.to_html
  %ul
    - if @reqp.date
      %li date: #{@reqp.date.strftime('%Y-%m-%d')}
    - if rationale = @reqp.attributes["rationale"]
      %li rationale: #{rationale.to_html}
    - if satisfies = @reqp.attributes["satisfies"]
      %li 
        satisfies:
        = satisfies.to_html
    - if @origin
      %li
        origin:
        - @origin.each do |doc|
          %a{:href => to("/d/#{doc}")}= doc
