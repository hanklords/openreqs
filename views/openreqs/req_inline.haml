.req{:id => @reqp.name}
  .id
    - if @date
      = @reqp.name
      - if @req
        (on #{@date.strftime('%F %T')})
    - else
      =@reqp.name
      (
      %a{:href => to("/r/#{@reqp.name}/edit")} edit
      )
  .content
    = @reqp.content.render
    %ul
      - if @reqp.date
        %li.date date: #{@reqp.date.strftime('%Y-%m-%d')}
      - @reqp.attributes.each do |name, attr|
        %li(class=name) #{name}: #{attr.to_html}
      - if @origin
        %li.origin
          origin:
          - @origin.each do |doc|
            %a{:href => to("/d/#{doc}")}= doc
  .edit
    %form{:method => "post", :action => to("/r/#{@reqp.name}/edit")}
      %h2 Text
      %textarea(name="content" cols=80 rows=5)= @reqp.content.text

      %h2 Attributes
      %ul
        - if @reqp.date
          %li date: #{Time.now.strftime('%Y-%m-%d')}
        - @reqp.attributes.each do |k,v| 
          %li 
            %textarea(name="#{k}" cols=15 rows=1)= k
            \: 
            %textarea(name="v#{k}" cols=40 rows=1)= v.text
        %li
          %input(name="key")
          \:
          %input(name="value")

      %input#save(type="submit" value="Sauver")
